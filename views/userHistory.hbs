<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History</title>
</head>
<body>
  <div class="container">
    <h1>User History</h1>
    <p><strong>User Name:</strong> {{user.userName}}</p>
    <p><strong>Email:</strong> {{user.email}}</p>
    <h2>Login History:</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>User Agent</th>
        </tr>
      </thead>
      <tbody>
        {{#each user.loginHistory}}
          <tr>
            <td>{{this.dateTime}}</td>
            <td>{{this.userAgent}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>
</body>
</html>

