<h2>Blog</h2>
<div class="row">
    <!-- Main content (Post Details) -->
    <div class="col-md-8">
        {{#if post}}
        <div class="card mb-3">
            <div class="card-body">
                <h3 class="card-title">{{post.title}}</h3>
                {{#if post.featureImage}}
                <img src="{{post.featureImage}}" class="img-fluid mb-3" alt="Feature Image">
                {{/if}}
                <p>{{post.body}}</p>
                <p><strong>Category:</strong> {{post.category}}</p>
                <p><strong>Last Updated:</strong> {{post.postDate}}</p>
            </div>
        </div>
        {{else}}
        <p>Please try another Post / Category</p>
        {{/if}}
    </div>

    <!-- Sidebar (Posts and Categories) -->
    <div class="col-md-4">
        <h4>Posts</h4>
        <ul class="list-group mb-3">
            {{#each posts}}
            <li class="list-group-item">
                <a href="/blog?postId={{id}}">{{title}}</a>
            </li>
            {{/each}}
        </ul>

        <h4>Categories</h4>
        <ul class="list-group">
            {{#each categories}}
            <li class="list-group-item">
                <a href="/blog?category={{name}}">{{name}}</a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
